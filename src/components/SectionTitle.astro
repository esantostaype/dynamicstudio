---
interface Props {
	title: string
  subtitle: string
  className?: string
  revealMode?: 'left' | 'fade' | 'up'
}
const { title, subtitle, className, revealMode='fade' } = Astro.props
---
<div class:list={["mb-12 md:mb-20 relative", className]}>
  <h4 class=`reveal-${ revealMode } opacity-60 uppercase font-medium leading-none mb-3`>{ subtitle }</h4>
  <h3 class=`reveal-${ revealMode } delay-[40ms] text-3xl md:text-4xl lg:text-5xl font-medium`>{ title }</h3>
</div>