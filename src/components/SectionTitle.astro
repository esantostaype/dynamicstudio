---
interface Props {
	title: string
  subtitle: string
  className?: string
}
const { title, subtitle, className } = Astro.props
---
<div class={`${ className } mb-8 md:mb-16`}>
  <h4 class="opacity-60 uppercase font-normal">{ subtitle }</h4>
  <h3 class="text-3xl md:text-4xl lx:text-5xl font-medium">{ title }</h3>
</div>