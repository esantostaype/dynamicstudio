---
interface Props {
	title: string
  subtitle: string
  className?: string
}
const { title, subtitle, className } = Astro.props
---
<div class:list={["mb-12 md:mb-20 relative", className]}>
  <h4 class="opacity-60 uppercase font-medium leading-none mb-3">{ subtitle }</h4>
  <h3 class="text-3xl md:text-4xl lg:text-5xl font-medium">{ title }</h3>
</div>