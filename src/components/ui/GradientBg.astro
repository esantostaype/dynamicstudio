---
interface Props {
	color: "purple" | "blue" | "red"
  position: "center" | "left" | "right"
  className?: string
}

const { color, position, className } = Astro.props

let bgElement = ""
let posElement = ""

switch ( color ) {
  case "purple":
    bgElement = "bg-[#3700FF]"
    break
  case "blue":
    bgElement = "bg-[#006b6b]"
    break
  case "red":
    bgElement = "bg-[#790050]"
    break
  default:
    bgElement = ""
    break
}

switch ( position ) {
  case "center":
    posElement = "left-1/2 -translate-x-1/2"
    break
  case "left":
    posElement = "-left-[400px] md:-left-[500px] xl:-left-[800px]"
    break
  case "right":
    posElement = "-right-[400px] md:-right-[500px] xl:-right-[800px]"
    break
  default:
    posElement = ""
    break
}
---
<div class={
  `${ className && className }
  ${ posElement }
  ${ bgElement }
  absolute -bottom-[400px] md:-bottom-[500px] xl:-bottom-[800px] -z-10 size-[800px] md:size-[1000px] xl:size-[1280px] blur-[240px] rounded-full opacity-20 mix-blend-lighten`
}/>