---

<Main title='Projects'>
	<Container className="pt-24 xl:pt-40 pb-20">
		<section class="items-start top-0 flex flex-col xl:flex-row gap-6 md:gap-12 ">
			<div class="xl:sticky top-40 flex z-20 xl:w-1/3">
				<div>
					<h1 class="reveal-left delay-[40ms] text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-medium 2xl:w-[140%]">{ title }</h1>
					<h3 class="reveal-left delay-[80ms] text-lg mt-4 mb-8">{ description }</h3>
					<span class="reveal-fade rounded-full inline-block py-6 px-3 items-center justify-center border border-[rgba(255,255,255,0.2)]">
						<ArrowDown width='32'/>
					</span>
				</div>
			</div>
			<div class="relative z-10 w-full xl:w-2/3">
				<ul class="masonry-container">
					{ projects.map(( project, index ) => (
						<li class="masonry-item mb-10">
							<a href={`/projects/${ project.slug }`} class="reveal-up block">
								<img alt={`Dynamic Studio - ${ project.title }`} src={ project.image } class="size-full block rounded relative object-cover" />
								<div class="flex justify-between items-center pt-2 opacity-60">
									<h2 class="text-lg md:text-xl font-medium text-nowrap">{ project.title }</h2>
									<span class="text-sm uppercase">{ project.category }</span>
								</div>
							</a>
						</li>
					))}
				</ul>
			</div>
		</section>
	</Container>
</Main>